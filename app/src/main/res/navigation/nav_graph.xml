<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.saba_badzgaradze_7.Fragments.HomeFragment"
        tools:layout="@layout/home_fragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.saba_badzgaradze_7.Fragments.DashboardFragment"
        tools:layout="@layout/dashboard_fragment"
        android:label="DashboardFragment" >
        <argument
            android:name="amount"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.saba_badzgaradze_7.Fragments.NotificationFragment"
        tools:layout="@layout/notification_fragment"
        android:label="NotificationFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.saba_badzgaradze_7.Fragments.ProfileFragment"
        tools:layout="@layout/profile_fragment"
        android:label="ProfileFragment" />
</navigation>